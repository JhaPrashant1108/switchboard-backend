# ==========================================
# SwitchBoard - Environment Variables Template
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control
#
# Usage:
# 1. Copy: cp .env.example .env
# 2. Fill in your actual credentials
# 3. Load environment variables before running the application

# ========== Database Configuration ==========
# PostgreSQL connection settings
DB_URL=jdbc:postgresql://localhost:5432/switchboard
DB_USERNAME=postgres
DB_PASSWORD=your_database_password_here

# JPA/Hibernate settings
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true

# ========== Redis Configuration ==========
# Redis connection settings
REDIS_HOSTNAME=localhost
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=your_redis_password_here

# ========== RabbitMQ Configuration ==========
# RabbitMQ connection settings
RABBITMQ_HOSTNAME=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_VIRTUAL_HOST=/
RABBITMQ_PASSWORD=guest
RABBITMQ_SSL_ENABLED=false
RABBITMQ_AUTO_RECOVERY=true
RABBITMQ_HEARTBEAT=30
RABBITMQ_TIMEOUT=5000

# ========== CORS Configuration ==========
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=false

# ========== Server Configuration ==========
SERVER_PORT=8080

# ========== Production Environment Example ==========
# For production, use values like:
# DB_URL=jdbc:postgresql://prod-db-server:5432/switchboard_prod
# REDIS_HOSTNAME=redis-prod.example.com
# REDIS_PORT=6379
# RABBITMQ_HOSTNAME=rabbitmq-prod.example.com
# RABBITMQ_PORT=5671
# RABBITMQ_SSL_ENABLED=true
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
